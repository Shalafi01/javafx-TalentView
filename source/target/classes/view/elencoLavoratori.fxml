<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox fx:id="root" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.elencoLavoratori">
    <VBox maxWidth="+Infinity" alignment="TOP_CENTER" style="-fx-background-color:#007FDB;">
        <GridPane fx:id="gridRicerca" vgap="5" hgap="5" maxWidth="800" alignment="CENTER" >
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
        </GridPane>
    </VBox>
    <ScrollPane fitToWidth="true" vbarPolicy="NEVER" fitToHeight="true" style="-fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-background-color:transparent;">
        <VBox fx:id="lista" alignment="TOP_CENTER" spacing="10">
            <padding>
                <Insets bottom="50" top="30"/>
            </padding>
        </VBox>
    </ScrollPane>
</VBox>